<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/main_menu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/lable" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/football_btn"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:text="@string/btn_football" />

            <Button
                android:id="@+id/basketball_btn"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:text="@string/btn_basketball" />

            <Button
                android:id="@+id/boxing_btn"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:text="@string/btn_box" />

            <Button
                android:id="@+id/tennis_btn"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:text="@string/btn_tennis" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>